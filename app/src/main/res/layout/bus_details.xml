<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/bgh">

    <EditText
        android:id="@+id/enterbusnumber"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:inputType="textPersonName"
        android:hint="Bus Number"
        android:layout_marginTop="32dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/entergpsid"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:inputType="textPersonName"
        android:hint="GPS ID"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/enterbusnumber"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/enterbusdriver"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_weight="0.03"
        android:inputType="textPersonName"
        android:hint="Bus Driver"
        android:layout_gravity="top"
        android:layout_below="@+id/entergpsid"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp" />
    <EditText
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_below="@+id/enterbusdriver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_gravity="top"
        android:hint="busroot"
        android:paddingTop="0dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/busroot"
        android:inputType="textMultiLine"/>
    <EditText
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_below="@+id/busroot"
        android:layout_marginTop="10dp"
        android:hint="bus timing"
        android:gravity="top"
        android:layout_marginLeft="30dp"
        android:inputType="textMultiLine"
        android:id="@+id/bustiming"/>

    <Button
        android:id="@+id/savebus"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:onClick="savebusinfo"
        android:text="Save" />


</LinearLayout>